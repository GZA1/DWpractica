
{% extends 'base.html.twig' %}

{% block title %} {{cat.nombre}} {% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('styles/style-shared.css')}}">
    <link rel="stylesheet" href="{{asset('styles/style-catologo.css')}}">
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    <script>
      $("document").ready(function() {
        $(function(){
          $("#slider-range").slider({
            range: true,
            min: 0,
            max: 900,
            values: [ 75, 300 ],
            slide: function( event, ui ) {
              $( "#sliderCantidad" ).val( "$" + ui.values[ 0 ] + " - $" + ui.values[ 1 ] );
            }
          });
          $("#sliderCantidad").val("$" + $( "#slider-range" ).slider("values", 0) +
          " - $" + $( "#slider-range" ).slider( "values", 1 ) );          
        });
        setTimeout(function(){ 
                    $('#notificacion').fadeOut('fast');
                    }, 4000
                    );
      });
    </script>
{% endblock %}

